{
  "$id": "c_promoSection",
  "$schema": "https://schema.yext.com/config/km/field-type/v1",
  "description": "CFT for starter Promo section",
  "displayName": "Promo Section",
  "type": {
    "structType": {
      "property": [
        {
          "name": "title",
          "displayName": "Title",
          "isRequired": false,
          "typeId": "string",
          "type": {
            "stringType": {
              "stereotype": "SIMPLE"
            }
          }
        },
        {
          "name": "description",
          "displayName": "Description",
          "isRequired": false,
          "typeId": "string",
          "type": {
            "stringType": {
              "stereotype": "MULTILINE"
            }
          }
        },
        {
          "name": "image",
          "displayName": "Image",
          "isRequired": false,
          "typeId": "image",
          "type": {
            "imageType": {
              "isSimpleImage": true,
              "minSize": {
                "width": 0,
                "height": 0
              },
              "unconstrainedAspectRatioAllowed": true,
              "noAllowedAspectRatios": true
            }
          }
        },
        {
          "name": "cta",
          "displayName": "CTA",
          "isRequired": false,
          "typeId": "cta"
        },
        {
          "name": "googlePlayUrl",
          "displayName": "Google Play Url",
          "isRequired": false,
          "typeId": "string",
          "type": {
            "stringType": {
              "stereotype": "URL"
            }
          }
        },
        {
          "name": "appStoreUrl",
          "displayName": "App Store Url",
          "isRequired": false,
          "typeId": "string",
          "type": {
            "stringType": {
              "stereotype": "URL"
            }
          }
        }
      ]
    }
  }
}
